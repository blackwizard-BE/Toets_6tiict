        mc:Ignorable="d"
        Title="OEF1" Height="162" Width="572">
    <Grid>
        <Label x:Name="lblToepassing" Content="Toepassing" HorizontalAlignment="Left" Margin="14,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblLogin" Content="Login" HorizontalAlignment="Left" Margin="43,36,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblWachtwoord" Content="Wachtwoord" HorizontalAlignment="Left" Margin="10,62,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txbToepassing" HorizontalAlignment="Left" Margin="88,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="26" VerticalContentAlignment="Center"/>
        <TextBox x:Name="txbLogin" HorizontalAlignment="Left" Margin="88,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="26" VerticalContentAlignment="Center"/>
        <TextBox x:Name="txbWachtwoord" HorizontalAlignment="Left" Margin="88,62,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="26" VerticalContentAlignment="Center"/>
