        <Button x:Name="btnOphalen" Content="Ophalen" HorizontalAlignment="Left" Margin="240,63,0,0" VerticalAlignment="Top" Height="21" Width="120" Click="btnOphalen_Click"/>
        <Button x:Name="btnToon" Content="Toon wachtwoord" HorizontalAlignment="Left" Margin="240,89,0,0" VerticalAlignment="Top" Height="21" Width="120" Click="btnToon_Click" IsEnabled="False"/>

    </Grid>
</Window>
